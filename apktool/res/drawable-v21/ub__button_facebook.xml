<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/ub__facebook_blue"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <nine-patch android:src="@drawable/ub__button_facebook_disabled" />
            </item>
            <item android:state_pressed="true">
                <nine-patch android:src="@drawable/ub__button_facebook_pressed" />
            </item>
            <item>
                <nine-patch android:src="@drawable/ub__button_facebook_normal" />
            </item>
        </selector>
    </item>
</ripple>