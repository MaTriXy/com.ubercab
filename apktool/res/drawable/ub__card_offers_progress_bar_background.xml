<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/ub__card_offers_progress_bar_radius" />
            <gradient android:startColor="@color/ub__uber_white_20" android:endColor="@color/ub__uber_white_20" android:angle="0.0" android:centerY="0.5" android:centerColor="@color/ub__uber_white_20" />
            <stroke android:width="@dimen/ub__card_offers_divider_thickness" android:color="@color/ub__uber_white_40" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/ub__card_offers_progress_bar_radius" />
                <gradient android:startColor="@color/ub__green" android:endColor="@color/ub__green" android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>