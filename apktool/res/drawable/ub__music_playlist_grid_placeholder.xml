<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/ub__music_grid_item_corner_radius" android:topRightRadius="@dimen/ub__music_grid_item_corner_radius" />
            <solid android:color="@color/ub__uber_black_40" />
        </shape>
    </item>
    <item android:left="1.0px" android:top="1.0px" android:right="1.0px" android:bottom="-1.0px">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/ub__music_grid_item_corner_radius" android:topRightRadius="@dimen/ub__music_grid_item_corner_radius" />
            <solid android:color="@color/ub__uber_white_10" />
        </shape>
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/ub__music_playlist_placeholder" />
    </item>
</layer-list>